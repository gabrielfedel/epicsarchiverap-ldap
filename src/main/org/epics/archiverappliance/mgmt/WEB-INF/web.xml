<web-app>
   <filter>
       <filter-name>MgmtUIFilter</filter-name>
       <filter-class>org.epics.archiverappliance.mgmt.MgmtUIFilter</filter-class>
   </filter>
   <filter>
       <filter-name>MgmtAuthenticationFilter</filter-name>
       <filter-class>org.epics.archiverappliance.mgmt.MgmtAuthenticationFilter</filter-class>
   </filter>
   <servlet>
        <servlet-name>StaticContent</servlet-name>
        <servlet-class>org.epics.archiverappliance.common.StaticContentServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>BPLServlet</servlet-name>
        <servlet-class>org.epics.archiverappliance.mgmt.BPLServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>PVAServlet</servlet-name>
        <servlet-class>org.epics.archiverappliance.mgmt.pva.PvaServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaticContent</servlet-name>
        <url-pattern>/ui/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BPLServlet</servlet-name>
        <url-pattern>/bpl/*</url-pattern>
    </servlet-mapping>
    <filter-mapping>
       <filter-name>MgmtUIFilter</filter-name>
       <url-pattern>/ui/*</url-pattern>
       <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
       <filter-name>MgmtAuthenticationFilter</filter-name>
       <url-pattern>/bpl/archivePV</url-pattern>
       <url-pattern>/bpl/pauseArchivingPV</url-pattern>
       <url-pattern>/bpl/pauseArchivingPV</url-pattern>
       <url-pattern>/bpl/consolidateDataForPV</url-pattern>
       <url-pattern>/bpl/deletePV</url-pattern>
       <url-pattern>/bpl/abortArchivingPV</url-pattern>
       <!-- <url-pattern>/bpl/abortArchivingPVForThisAppliance</url-pattern> -->
       <url-pattern>/bpl/changeArchivalParameters</url-pattern>
       <url-pattern>/bpl/renamePV</url-pattern>
       <url-pattern>/bpl/reshardPV</url-pattern>
    </filter-mapping>
	<welcome-file-list>
		<welcome-file>/ui/redirect.html</welcome-file>
	</welcome-file-list>
	<listener>
		<listener-class>org.epics.archiverappliance.config.ArchServletContextListener</listener-class>
	</listener> 
	<resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/archappl</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  	</resource-ref>
</web-app>
